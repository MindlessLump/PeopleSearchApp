<Window x:Class="PeopleSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeopleSearchApp"
        mc:Ignorable="d"
        Title="People Database Search" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" IsEnabled="False"/>

        <Label x:Name="searchLabel" Content="Enter search term:" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="0.5,0.5" IsEnabled="True"/>
        <TextBox x:Name="searchText" HorizontalAlignment="Left" Height="23" Margin="210,43,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="110" IsEnabled="True"/>
        <Button x:Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="100,90,0,0" VerticalAlignment="Top" Width="75" IsEnabled="True" Click="searchButton_Click"/>

    </Grid>
</Window>
